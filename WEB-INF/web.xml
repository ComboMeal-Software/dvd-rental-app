<?xml version="1.0" encoding="UTF-8"?>
<!--suppress MybatisXMapperXmlInspection, WebProperties -->
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>DvdCreateServlet</servlet-name>
        <servlet-class>ml.thomasmiles.dvdrentalapp.DvdCreateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DvdFindServlet</servlet-name>
        <servlet-class>ml.thomasmiles.dvdrentalapp.DvdFindServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DvdTypesServlet</servlet-name>
        <servlet-class>ml.thomasmiles.dvdrentalapp.DvdTypesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClientCreateServlet</servlet-name>
        <servlet-class>ml.thomasmiles.dvdrentalapp.ClientCreateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClientFindServlet</servlet-name>
        <servlet-class>ml.thomasmiles.dvdrentalapp.ClientFindServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RentAddServlet</servlet-name>
        <servlet-class>ml.thomasmiles.dvdrentalapp.RentAddServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RentReturnServlet</servlet-name>
        <servlet-class>ml.thomasmiles.dvdrentalapp.RentReturnServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DvdCreateServlet</servlet-name>
        <url-pattern>/dvd/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DvdFindServlet</servlet-name>
        <url-pattern>/dvd/find</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DvdTypesServlet</servlet-name>
        <url-pattern>/dvd/types</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClientCreateServlet</servlet-name>
        <url-pattern>/client/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClientFindServlet</servlet-name>
        <url-pattern>/client/find</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RentAddServlet</servlet-name>
        <url-pattern>/rent/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RentReturnServlet</servlet-name>
        <url-pattern>/rent/return</url-pattern>
    </servlet-mapping>

</web-app>